# Variables de entorno para el pipeline de Jenkins
# Copia este archivo como .env y configura tus valores reales

# =============================================================================
# CREDENCIALES AWS
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# CREDENCIALES GIT
# =============================================================================
GIT_USERNAME=your_git_username
GIT_PASSWORD=your_git_password_or_token
GIT_REPOSITORY_URL=https://github.com/MovieSphere/Infraestructura-Terraform
GIT_BRANCH=main

# =============================================================================
# CONFIGURACIÓN JENKINS
# =============================================================================
JENKINS_USER=admin
JENKINS_PASSWORD=admin123
JENKINS_URL=http://localhost:8080

# =============================================================================
# CONFIGURACIÓN TERRAFORM
# =============================================================================
TERRAFORM_VERSION=latest
TERRAFORM_BACKEND_BUCKET=your-terraform-state-bucket
TERRAFORM_BACKEND_KEY=terraform.tfstate
TERRAFORM_BACKEND_REGION=us-east-1

# =============================================================================
# CONFIGURACIÓN DEL PIPELINE
# =============================================================================
PIPELINE_JOB_NAME=terraform-pipeline
DEFAULT_ENVIRONMENT=develop
SKIP_APPROVAL_DEFAULT=false

# =============================================================================
# CONFIGURACIÓN CHECKOV
# =============================================================================
CHECKOV_SKIP_CHECKS=CKV2_AWS_5
CHECKOV_OUTPUT_FORMAT=cli,junitxml
CHECKOV_OUTPUT_FILE=results.xml

# =============================================================================
# CONFIGURACIÓN DOCKER
# =============================================================================
DOCKER_NETWORK_NAME=jenkins-network
JENKINS_PORT=8080
JENKINS_AGENT_PORT=50000 